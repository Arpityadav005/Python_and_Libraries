
import getpass

class ATM:
    def __init__(self):
        self.user_pin = ''
        self.account_balance = 0
        
    def display_menu(self):
        while True:
            print("\n" + "="*40)
            print("ğŸ’³ Welcome to the ATM ğŸ’³".center(40))
            print("="*40)
            print("1ï¸âƒ£  Create a new PIN")
            print("2ï¸âƒ£  Change existing PIN")
            print("3ï¸âƒ£  Check account balance")
            print("4ï¸âƒ£  Withdraw money")
            print("5ï¸âƒ£  Exit")
            print("="*40)

            user_choice = input("ğŸ‘‰ Please select an option: ")

            if user_choice == '1':
                self.create_new_pin()
            elif user_choice == '2':
                self.update_pin()
            elif user_choice == '3':
                self.view_balance()
            elif user_choice == '4':
                self.withdraw_money()
            elif user_choice == '5':
                print("\nğŸ™ Thank you for using our ATM! Have a great day! ğŸ™Œ")
                break
            else:
                print("âŒ Invalid input! Please select a valid option.")

    def create_new_pin(self):
        while True:
            new_pin = getpass.getpass("ğŸ”‘ Set a 4-digit PIN: ")
            if new_pin.isdigit() and len(new_pin) == 4:
                self.user_pin = new_pin
                break
            else:
                print("âŒ Invalid PIN! Please enter exactly 4 digits.")

        while True:
            try:
                self.account_balance = float(input("ğŸ’° Enter your initial deposit amount: "))
                if self.account_balance >= 0:
                    break
                else:
                    print("âŒ Balance cannot be negative!")
            except ValueError:
                print("âŒ Invalid amount! Please enter a valid number.")

        print("âœ… PIN created successfully & account balance updated!")

    def update_pin(self):
        old_pin = getpass.getpass("ğŸ”‘ Enter your current PIN: ")
        if old_pin == self.user_pin:
            while True:
                new_pin = getpass.getpass("ğŸ”„ Set a new 4-digit PIN: ")
                if new_pin.isdigit() and len(new_pin) == 4:
                    self.user_pin = new_pin
                    print("âœ… PIN updated successfully!")
                    break
                else:
                    print("âŒ Invalid PIN! Please enter exactly 4 digits.")
        else:
            print("âŒ Incorrect PIN! Access denied.")

    def view_balance(self):
        entered_pin = getpass.getpass("ğŸ”‘ Enter your PIN to check balance: ")
        if entered_pin == self.user_pin:
            print(f"ğŸ’µ Your account balance is: â‚¹{self.account_balance:.2f}")
        else:
            print("âŒ Incorrect PIN! Access denied.")

    def withdraw_money(self):
        entered_pin = getpass.getpass("ğŸ”‘ Enter your PIN to withdraw money: ")
        if entered_pin == self.user_pin:
            while True:
                try:
                    withdrawal_amount = float(input("ğŸ’¸ Enter the amount you want to withdraw: â‚¹"))
                    if withdrawal_amount <= self.account_balance and withdrawal_amount > 0:
                        self.account_balance -= withdrawal_amount
                        print(f"âœ… Transaction Successful! Remaining Balance: â‚¹{self.account_balance:.2f}")
                        break
                    elif withdrawal_amount <= 0:
                        print("âŒ Please enter a valid withdrawal amount!")
                    else:
                        print("âŒ Insufficient funds!")
                except ValueError:
                    print("âŒ Invalid input! Please enter a valid number.")
        else:
            print("âŒ Incorrect PIN! Access denied.")

# Run the ATM program
atm = ATM()
atm.display_menu()
